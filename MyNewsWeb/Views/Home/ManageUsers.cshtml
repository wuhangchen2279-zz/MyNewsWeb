@{
    ViewBag.Title = "Manage Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts {
    <link href="~/Content/CustomStyle.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/myScripts/AngularForAdmin.js"></script>
}
<div ng-app="userModule" id="body">
    <div ng-controller="userCtrl">
        <h2>Manage All Users</h2>
        <h3>List of Users</h3>
        <table ng-cloak>
            <thead>
                <tr>
                    @*<th style="display: none;">ID</th>*@
                    <th></th>
                    <th>Email Address</th>                   
                    <th>User Name</th>
                    <th>User Role</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="user in userData">
                
                    @*<td hidden="hidden">{{user.Id}}</td>*@
                    <td><input type="checkbox" ng-model="folder[user.Email]" value="{{user.Email}}" /></td>
                    <td>{{user.Email}}</td>
                    <td>{{user.FirstName}} {{user.LastName}}</td>
                    <td>{{user.UserRoles}}</td>
                    <td>
                        <button ng-model="$scope.User"
                                ng-click="edit(userData[$index])">
                            Edit
                        </button>
                        <button ng-click="delete($index)">Delete</button>
                    </td>
                </tr>
            </tbody>

            @*<tfoot>
                <tr>
                    <td colspan="6">
                        <hr />
                    </td>
                </tr>
                <tr>
                    <td>Total :</td>
                    <td></td>
                    <td>
                        <label ng-bind="total() |
currency:'AUD$':2"></label>
                    </td>
                    <td></td>
                </tr>
            </tfoot>*@
        </table>
        <div>
            <button data-ng-click="send()">Send Message</button>
        </div>
        <br />
        <div style="border-top: solid 2px #282828; width: 430px; height: 10px"> </div>
        <div ng-show="Book.Id != '' ">
            <div>
                <h2>Update User Information</h2>
            </div>
            @*<div hidden="hidden">
                <label for="id">Id</label>
                <input type="text" data-ng-model="Book.Id" />
            </div>*@
            <div>
                <label for="name">First Name</label>
                <input type="text" data-ng-model="User.FirstName" />
            </div>
            <div>
                <label for="name">Last Name</label>
                <input type="text" data-ng-model="User.LastName" />
            </div>
            <div>
                <label for="email">Email Address</label>
                <input type="text" data-ng-model="User.Email" />
            </div>
            <br />
            <div>
                <button data-ng-click="update()">Update</button>
                <button data-ng-click="cancel()">Cancel</button>
            </div>
        </div>
        <div ng-hide="User.Id != '' ">
            <div>
                <h2>Add New User</h2>
            </div>
            <div>
                <label for="name">First Name</label>
                <input type="text" data-ng-model="User.FirstName" />
            </div>
            <div>
                <label for="name">Last Name</label>
                <input type="text" data-ng-model="User.LastName" />
            </div>
            <div>
                <label for="email">Email Address</label>
                <input type="text" data-ng-model="User.Email" />
            </div>
            <br />
            <div>
                <button data-ng-click="save()">Save</button>
                <button data-ng-click="clear()">Clear</button>
            </div>
        </div>
    </div>
</div>
